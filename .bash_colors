# Define Colors
export BLACK='\033[0;30m'
export DGRAY='\033[1;30m'
export RED='\033[0;31m'
export LRED='\033[1;31m'
export GREEN='\033[0;32m'
export LGREEN='\033[1;32m'
export YELLOW='\033[0;33m'
export LYELLOW='\033[1;33m'
export BLUE='\033[0;34m'
export LBLUE='\033[1;34m'
export PURPLE='\033[0;35m'
export LPURPLE='\033[1;35m'
export CYAN='\033[0;36m'
export LCYAN='\033[1;36m'
export LGRAY='\033[0;37m'
export WHITE='\033[1;37m'
export NC='\033[0m' # No Color

#alias colorslist="set | egrep '\w*'"  # lists all the colors

#export PROMPT_COMMAND='echo -ne "\\033]0;${USER}@${HOSTNAME%%.*} ${PWD}"; echo -ne "\\007"'
#export PS1="\\[${GREEN}\\]\\w > \\[${NC}\\]" # puts
#export PS1="\\[${LGREEN}\\]\\u - \W$ \\[${NC}\\]"  # Primary prompt with user, and host
#git push --repo "https://jlaw9@github.com/jlaw9/Profile.git"
ip=`/sbin/ifconfig | grep 'inet addr:' | grep -v "127.0.0.1" | cut -d: -f2 | head -n 1 | cut -d' ' -f1`
if [ "$ip" = "" ]; then
	export PS1="\\[\033[01;32m\]\u\[\033[00m\]:\[\033[01;34m\]\W\[\033[0m\]\$ "
else
	export PS1="\\[\033[01;32m\]\u@${ip}\[\033[00m\]:\[\033[01;34m\]\W\[\033[0m\]\$ "
fi

